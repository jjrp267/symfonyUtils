{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}

		<h2>Listado de Artículos</h2>

		<table class="table table-hover">
			<thead class="table-dark">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th>Writter</th>
					<th>Language</th>
					<th>Date</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.id }}</td>
						<td>{{ article.name }}</td>
						<td>{{ article.description }}</td>
						<td>{{ article.writter }}</td>
						<td>{{ article.language }}</td>
						<td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
							<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

        <a href="{{ path('app_article_new') }}"><button type="button" class="btn btn-primary">Añadir</button></a>

{% endblock %}
