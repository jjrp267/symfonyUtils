{% extends 'base.html.twig' %}

{% block title %}Artículo{% endblock %}

{% block body %}
    <h1>Artículo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Escritor</th>
                <td>{{ article.writter }}</td>
            </tr>
            <tr>
                <th>Lenguaje</th>
                <td>{{ article.language }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ article.date ? article.date|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}"><button type="button" class="btn btn-primary">Volver al listado</button></a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}"><button type="button" class="btn btn-primary">editar</button></a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
